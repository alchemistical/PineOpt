# Epic 7 Production Environment Configuration
# Copy to .env and modify as needed

# Epic 7 Application Settings
FLASK_ENV=production
NODE_ENV=production
API_PORT=5007
FRONTEND_PORT=3000

# Epic 7 Database Settings (Unified Database)
DATABASE_URL=sqlite:///app/database/pineopt_unified.db
DATABASE_PATH=/app/database/pineopt_unified.db
STRATEGIES_DB_PATH=/app/database/pineopt_unified.db

# Epic 7 API Settings
API_BASE_URL=http://backend:5007
API_VERSION=v1
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# Market Data Settings
BINANCE_API_TIMEOUT=30
TARDIS_API_TIMEOUT=30
CACHE_EXPIRY_SECONDS=300

# Backtesting Settings
MAX_CONCURRENT_BACKTESTS=5
BACKTEST_TIMEOUT_MINUTES=10
MAX_BACKTEST_HISTORY_DAYS=365

# Security Settings
SECRET_KEY=change-this-in-production-to-a-random-key
ALLOWED_HOSTS=localhost,127.0.0.1
MAX_UPLOAD_SIZE_MB=10

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance Settings
WORKERS=4
THREADS=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# Epic 7 Feature Flags
ENABLE_MONITORING=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_DOCUMENTATION=true
ENABLE_PERFORMANCE_OPTIMIZATION=true

# Epic 7 Monitoring Settings
MONITORING_UPDATE_INTERVAL=60
MONITORING_COLLECTION_INTERVAL=30
ALERT_CHECK_INTERVAL=120
HEALTH_CHECK_INTERVAL=300

# Epic 7 Performance Settings
CACHE_MAX_MEMORY_MB=500
CACHE_DEFAULT_TTL=300
MEMORY_LIMIT_MB=2048
QUERY_OPTIMIZATION=true

# Epic 7 Documentation Settings
DOC_ROUTE_PREFIX=/docs
ENABLE_SWAGGER_UI=true
ENABLE_INTERACTIVE_DOCS=true